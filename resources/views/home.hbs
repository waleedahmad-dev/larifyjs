{{#if users.length}}
<section class="demo-section">
  <h2 class="section-title">Demo Data</h2>
  <div class="card">
    <div class="card-header">Users in Database</div>
    <div class="card-body">
      <table class="data-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
{{/if}}
